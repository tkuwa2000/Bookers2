<!-- ユーザーの詳細 -->
<div>
  <h3><%= @user.name %></h3>
  <%= image_tag @user.get_profile_image(100,100) %>
</div>

<!-- ユーザーの投稿一覧 -->

<% @books.each do |book| %>
<div>
  <%= link_to user_path(book.id) do %>
    <%= image_tag book.user.get_profile_image(100,100) %>
  <% end %>
  <p>title：<%= book.title %></p>
  <p>Opinion：<%= book.opinion %></p>
</div>
<% end %>